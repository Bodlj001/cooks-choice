<!DOCTYPE html>
<html>
  <head>
    <title>CooksChoice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/navbar' unless params["controller"] == "devise/sessions" || "devise/registrations" && params["action"] == "new" %>

    <%= render 'shared/flashes' %>
    <%= yield %>
  </body>
</html>


