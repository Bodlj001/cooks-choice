<div class="container">
  <h1>Book <%= @booking.cook.name %>!</h1>
  <br>
  <div class="form-container">
    <%= simple_form_for [ @booking.cook, @booking ] do |f| %>
      <%= f.input :location, label: "Where do you want me?" %>
      <%= f.input :date, as: :date, html5: true, label: "When do you want me?" %>
      <%= f.submit "Book!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
