<div class="form-container rounded-lg shadow">
  <h2>Book me!</h2>
  <%= simple_form_for [ @booking.cook, @booking ] do |f| %>
      <%= f.input :location, label: "Where?" %>
      <%= f.input :date, as: :date, html5: true, label: "When?", input_html: { value: Date.today } %>
      <%= f.submit "Book!", class: "btn btn-primary" %>
  <% end %>
</div>
