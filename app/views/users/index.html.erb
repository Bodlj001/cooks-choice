<div class="wrapper">
  <div class="cards-wrapper container">
    <h1>Cooks</h1>

    <% @cooks.each do |cook| %>
      <%= link_to user_path(cook) do %>
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <% if cook.avatar.attached?%>
                <%= cl_image_tag(cook.avatar.key,
                width: 400, height: 300, crop: :fill) %>
              <% else %>
                <img src="https://pngimage.net/wp-content/uploads/2018/06/no-avatar-png-8.png" alt="fake image" style="width: 100%;height: 30vh; object-fit: cover; object-position: 50% 65%;">
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%=cook.name%></h5>
                <p class="card-text"><%=cook.bio%></p>
                <p class="card-tex"><small class="text-muted">Last updated <%= rand(1..20) %> days ago</small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
