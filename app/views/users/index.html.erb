<div class="wrapper">
  <h1>Cooks</h1>

  <% @cooks.each do |cook| %>
    <%= link_to user_path(cook) do %>
      <div class="card mb-3">
        <img src="https://images.unsplash.com/photo-1476224203421-9ac39bcb3327?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=60" alt="fake image" style="width: 100%;height: 50vh; object-fit: cover; object-position: 50% 65%;">
        <div class="card-body">
          <h5 class="card-title"><%=cook.name%></h5>
          <p class="card-text"><%=cook.bio%></p>
          <p class="card-tex"><small class="text-muted">Last updated <%= rand(1..20) %> days ago</small></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
