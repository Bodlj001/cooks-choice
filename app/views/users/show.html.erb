<% if @user == current_user %>
  <h1>Hello, <%= @user.name %>!</h1>

  <h2>Your bookings:</h2>
  <ul>
    <% @bookings.each do |booking| %>
      <li>
        <%= booking.date %> <br>
        Cook: <%= booking.cook.name %> <br>
        Location: <%= booking.location %>
        <% if !current_user.iscook %>
          <%= link_to "CANCEL", user_booking_path(@user, booking), method: "delete" %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% elsif @user.iscook %>

  <div id="profile-info">
    <div class="profile-">
      <%= image_tag("gordon-ramsay.jpg", class: "profile-avatar") %>
      <h1><%= @user.name %></h1>
    </div>

    <h3>Â£<%= @user.price / 100 %> per day</h3>
    <div id="profile-stars">
      <% @user.rating.times do %>
        <i class="far fa-star"></i>
      <% end %>
    </div>

    <h3><%= @user.cuisine %></h3>
    <p id="profile-bio"><%= @user.bio %></p>
  </div>

  <% if !current_user.iscook %>
    <%= link_to "Book this Cook!", new_user_booking_path(@user), {
      class: 'btn btn-primary'
    } %>
  <% end %>

  <div id="profile-photos" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#profile-photos" data-slide-to="0" class="active"></li>
      <li data-target="#profile-photos" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://www.onceuponachef.com/images/2019/07/Big-Italian-Salad-760x983.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://www.kingarthurflour.com/sites/default/files/styles/featured_image/public/recipe_legacy/20-3-large.jpg?itok=1EY8KWJG" alt="Second slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#profile-photos" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#profile-photos" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<% end %>
