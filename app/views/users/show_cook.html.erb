

<div class="profile-banner">
  <div id="profile-photos" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    </ol>
    <div class="carousel-inner">
      <% if @user.photos.attached? %>
        <% @user.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>" data-target="#profile-photos" data-slide-to="<%= index %>">
            <%= cl_image_tag(photo.key,  crop: :fill, class: "d-block w-100 custom-profile-banner", style: "width: 100vw; height: 50vh; object-fit: cover; object-position: 50% 65%;") %>
          </div>
        <% end %>
      <% else %>
        <div class="carousel-item active">
          <img class="default-banner" src="https://images.unsplash.com/photo-1498522271744-cdd435c13f24?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1954&q=80" alt="fake banner" style="width: 100vw; height: 40vh; object-fit: cover; object-position: 50% 65%;">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://www.kingarthurflour.com/sites/default/files/styles/featured_image/public/recipe_legacy/20-3-large.jpg?itok=1EY8KWJG" alt="Second slide" style="width: 100vw;height: 40vh; object-fit: cover; object-position: 50% 65%;">
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#profile-photos" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#profile-photos" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>



<div class="show-container container">
  <div class="container">

    <div class="row">
      <div class="col-sm" style="margin-top:1vh;">

        <div class="col-sm" style="">
          <div id="profile-info">
            <div class="profile-">
              <% if @user.avatar.attached? %>
                <%= cl_image_tag(@user.avatar.key,
                width: 170, height: 170, crop: :fill, class: "profile-avatar") %>
              <% else %>
                <img class="profile-avatar" src="https://pngimage.net/wp-content/uploads/2018/06/no-avatar-png-8.png" alt="fake image" style="width: 170px;height: 170px; object-fit: cover; object-position: 50% 65%;">
              <% end %>
              <div class="username">
                <h3><%= @user.cuisine %></h3>
                <p id="profile-bio"><%= @user.bio %></p>

              </div>
            </div>
          </div>
        </div>

        <hr>
        <div class="col-sm" style="margin-top: 10px;display: flex; justify-content: space-between;">

          <% if current_user == @user %>
            <%= link_to edit_user_registration_path do %>
              <i class='fas fa-pencil-alt'></i>
            <% end %>
          <% end %>
          <div id="profile-stars">
            <% if @user.rating %>
              <% @user.rating.times do %>
                <i class="far fa-star"></i>
              <% end %>
            <% end %>
          </div>
          <h1 style="padding-right: 149px;"><%= @user.name %></h1>
          <% if @user.price %>
            <h3 style="margin-top: 9px;">Â£<%= @user.price / 100 %> per day</h3>
          <% end %>
        </div>
      </div>
    <div class="col-sm">

    </div>
  </div>
</div>
    
<% if !current_user.iscook && current_user != @user %>
  <%= render "users/booking_form" %>
<% end %>

